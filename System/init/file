-- Setup environment
A.file = {}

A.file.read = function(file, default)
	if fs.exists(file) then
		local fh = fs.open(file, "r")
		local data = fs.readAll()
		fh.close()
		return data
	else
		return default
	end
end

A.file.write = function(file, content)
	local fh = fs.open(file, "w")
	fh.write(content)
	fh.close()
	return true
end