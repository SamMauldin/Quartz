-- Disable termination. We rewrite it later
os.pullEvent = os.pullEventRaw

print("SystemStarter running...")

--Check for bootloader.
if fs.exists("/System/bootloader") then
	os.run({}, "/System/bootloader")
else
	print("It seems your Quartz installation is corrupt.")
	print("To maintain security, please repair or reinstall the system by booting of a disk.")
	sleep(5)
	os.shutdown()
end

-- This shouldn't happen. just in case



print("It seems your Quartz installation is acting weird.")
print("Whats happening? :P")
sleep(5)
os.shutdown()